<?xml version="1.0" encoding="UTF-8"?>
<compiz>
  <plugin name="thumbnail" useBcop="true">
    <_short>Thumbnail Window Previews</_short>
    <_long>Live window thumbnails at the dock, launcher or taskbar</_long>
    <category>Extras</category>
    <deps>
      <relation type="after">
        <plugin>opengl</plugin>
        <plugin>mousepoll</plugin>
        <plugin>text</plugin>
        <plugin>decor</plugin>
      </relation>
      <requirement>
        <plugin>opengl</plugin>
        <plugin>mousepoll</plugin>
      </requirement>
    </deps>
    <options>
      <group>
        <_short>General</_short>
        <option name="always_on_top" type="bool">
          <_short>Thumbnails Always On Top</_short>
          <_long>Paint thumbnails always on top.</_long>
          <default>true</default>
        </option>
        <option name="thumb_size" type="int">
          <_short>Thumbnail Window Size</_short>
          <_long>Maximum horizontal size of the thumbnail (in pixel).</_long>
          <default>200</default>
          <min>50</min>
          <max>1500</max>
        </option>
        <option name="show_delay" type="int">
          <_short>Show Delay</_short>
          <_long>Time before the thumbnail preview is faded in (in ms).</_long>
          <default>100</default>
          <min>100</min>
          <max>10000</max>
        </option>
        <option name="fade_speed" type="float">
          <_short>Fade In/Out Duration</_short>
          <_long>Fade in/out duration (in seconds).</_long>
          <default>0.5</default>
          <min>0.0</min>
          <max>5.0</max>
          <precision>0.1</precision>
        </option>
        <option name="border" type="int">
          <_short>Thumbnail Border Size</_short>
          <_long>Size of thumbnail window preview border (in pixel).</_long>
          <default>16</default>
          <min>1</min>
          <max>32</max>
        </option>
        <option name="thumb_color" type="color">
          <_short>Thumbnail Border Glow Color</_short>
          <_long>Border glow color and opacity or opacity of the window like black background.</_long>
          <default>
            <red>0x0000</red>
            <green>0x0000</green>
            <blue>0x0000</blue>
            <alpha>0x7fff</alpha>
          </default>
        </option>
        <option name="window_like" type="bool">
          <_short>Paint Window Like Background</_short>
          <_long>Render a black, window-like background instead of the background glow.</_long>
          <default>true</default>
        </option>
        <option name="mipmap" type="bool">
          <_short>Generate Mipmaps</_short>
          <_long>Generate mipmaps for higher quality texture scaling, if possible.</_long>
          <default>false</default>
        </option>
        <subgroup>
          <_short>Dock / Launcher / Taskbar</_short>
          <option name="current_viewport" type="bool">
            <_short>Only Windows of Current Viewport</_short>
            <_long>Enable this, if your dock, launcher or taskbar is set to show only windows of the current viewport.</_long>
            <default>true</default>
          </option>
        </subgroup>
      </group>
      <group>
        <_short>Window Title Text</_short>
        <option name="title_enabled" type="bool">
          <_short>Enable Titles</_short>
          <_long>Render window title text below the thumbnail.</_long>
          <default>true</default>
        </option>
        <option name="font_bold" type="bool">
          <_short>Bold Font</_short>
          <_long>Use a bold font to render the window title.</_long>
          <default>true</default>
        </option>
        <option name="text_distance" type="int">
          <_short>Text Distance</_short>
          <_long>The gap between the thumbnail and the window title text (in pixel).</_long>
          <default>10</default>
          <min>0</min>
          <max>32</max>
        </option>
        <option name="font_size" type="int">
          <_short>Font Size</_short>
          <_long>The size of the window title (in pixel).</_long>
          <default>12</default>
          <min>6</min>
          <max>36</max>
        </option>
        <option name="font_color" type="color">
          <_short>Font Color</_short>
          <_long>Color and opacity of the window title font.</_long>
          <default>
            <red>0xffff</red>
            <green>0xffff</green>
            <blue>0xffff</blue>
            <alpha>0xffff</alpha>
          </default>
        </option>
        <option name="font_background_color" type="color">
          <_short>Font Background Color</_short>
          <_long>Color and opacity of the filled rounded rectangle font background.</_long>
          <default>
            <red>0x0000</red>
            <green>0x0000</green>
            <blue>0x0000</blue>
            <alpha>0x7fff</alpha>
          </default>
        </option>
      </group>
    </options>
  </plugin>
</compiz>
