<?xml version="1.0" encoding="UTF-8"?>
<compiz>
    <plugin name="resizeinfo" useBcop="true">
	<_short>Resize Info</_short>
	<_long>Display info on resize similar to metacity</_long>
	<category>Utility</category>
	<deps>
	    <requirement>
		<plugin>opengl</plugin>
	    </requirement>
	    <relation type="after">
		<plugin>opengl</plugin>
		<plugin>composite</plugin>
		<plugin>resize</plugin>
		<plugin>decor</plugin>
	    </relation>
	</deps>
	<options>
	    <option name="fade_time" type="int">
		<_short>Fade Time</_short>
		<_long>Fade time (in ms) for the popup window.</_long>
		<default>500</default>
		<min>10</min>
		<max>5000</max>
	    </option>
	    <option name="always_show" type="bool">
		<_short>Show Resizeinfo For All Windows</_short>
		<_long>Show resize info for all windows as opposed to just for text based windows like terminals.</_long>
		<default>false</default>
	    </option>
	    <option name="resizeinfo_font_bold" type="bool">
		<_short>Bold Font</_short>
		<_long>Render the resize info's size display with a bold font.</_long>
		<default>true</default>
	    </option>
	    <option name="resizeinfo_font_size" type="int">
		<_short>Font Size</_short>
		<_long>Font size of the resize info's display.</_long>
		<default>12</default>
		<min>10</min>
		<max>14</max>
	    </option>
	    <option name="text_color" type="color">
		<_short>Text Color</_short>
		<_long>Color and opacity of the resize popup's text.</_long>
		<default>
		    <red>0x0000</red>
		    <blue>0x0000</blue>
		    <green>0x0000</green>
		    <alpha>0xffff</alpha>
		</default>
	    </option>
	    <option name="gradient_1" type="color">
		<_short>Gradient Color 1</_short>
		<_long>Color and opacity on the left side of the gradient background.</_long>
		<default>
		    <red>0xcccc</red>
		    <green>0xcccc</green>
		    <blue>0xe665</blue>
		    <alpha>0xcccc</alpha>
		</default>
	    </option>
	    <option name="gradient_2" type="color">
		<_short>Gradient Color 2</_short>
		<_long>Color and opacity in the center of the gradient background.</_long>
		<default>
		    <red>0xf332</red>
		    <green>0xf332</green>
		    <blue>0xf332</blue>
		    <alpha>0xcccc</alpha>
		</default>
	    </option>
	    <option name="gradient_3" type="color">
		<_short>Gradient Color 3</_short>
		<_long>Color and opacity on the right side of the gradient background.</_long>
		<default>
		    <red>0xd998</red>
		    <green>0xd998</green>
		    <blue>0xd998</blue>
		    <alpha>0xcccc</alpha>
		</default>
	    </option>
	    <option name="outline_color" type="color">
		<_short>Outline Color</_short>
		<_long>Color and opacity of the background's outline.</_long>
		<default>
		    <red>0xe665</red>
		    <green>0xe665</green>
		    <blue>0xe665</blue>
		    <alpha>0xffff</alpha>
		</default>
	    </option>
	</options>
    </plugin>
</compiz>
